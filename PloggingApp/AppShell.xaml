<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PloggingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PloggingApp">

    <TabBar>
        <ShellContent Route="MainPage" Title="Dashboard" ContentTemplate="{DataTemplate views:MainPage}"></ShellContent>
        <ShellContent Route="RankingPage" Title="Leaderboard" ContentTemplate="{DataTemplate views:RankingsPage}"></ShellContent>
    </TabBar>
</Shell>
