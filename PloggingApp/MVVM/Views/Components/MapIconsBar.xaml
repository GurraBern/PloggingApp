<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PloggingApp.MVVM.Views.MapIconsBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Self">

    <Border Style="{StaticResource RoundBorder}">
        <HorizontalStackLayout Spacing="15">
            <VerticalStackLayout>
                <Image
                    HeightRequest="20"
                    Scale="2"
                    Source="red_dot.png"
                    WidthRequest="20"/>
                <Label FontSize="Caption" Text="Collected"/>
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Image
                    HeightRequest="20"
                    Source="handshake_color_icon.png"
                    WidthRequest="20"/>
                <Label FontSize="Caption" Text="Pickup"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </Border>
</ContentView>
