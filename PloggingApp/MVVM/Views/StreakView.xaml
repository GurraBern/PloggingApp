<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:modelsCore="clr-namespace:Plogging.Core.Models;assembly=Plogging.Core"
             xmlns:viewmodel="clr-namespace:PloggingApp.MVVM.ViewModels"
             x:Class="PloggingApp.MVVM.Views.StreakView"
             x:DataType="viewmodel:StreakViewModel">

    <HorizontalStackLayout>
        <Image Source="streak_flame.png"
               WidthRequest="30"
               HeightRequest="30"
               VerticalOptions="Start"
               HorizontalOptions="Start"/>

        <Label Text="{Binding UserStreakCount.Streak}"
               FontSize="Large"
               FontAttributes="Bold"
               VerticalOptions="Start"
               HorizontalOptions="Start"/>
    </HorizontalStackLayout>
</ContentView>

