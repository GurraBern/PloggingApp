<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.MVVM.Views.StatisticsView"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:viewmodel="clr-namespace:PloggingApp.MVVM.ViewModels" 
             x:DataType="viewmodel:StatisticsViewModel"
             >
    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <HorizontalStackLayout Spacing="5" Margin="0,0,0,20" Grid.Row="0">
            <Button Style="{StaticResource CapsuleButton}" Command="{Binding TestCommand}"  Text="This Year"></Button>
            <Button Style="{StaticResource CapsuleButton}" Command="{Binding TestCommand}" Text="This Month"></Button>
            <Button Style="{StaticResource CapsuleButton}" Command="{Binding TestCommand}" Text="All Time"></Button>
        </HorizontalStackLayout>
        <micro:ChartView Chart="{Binding TrashTypeChart}" HeightRequest="300" Grid.Row="1"/>
    </Grid>
       
       </ContentView>