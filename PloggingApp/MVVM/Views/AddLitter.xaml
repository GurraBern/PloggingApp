<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.MVVM.Views.AddLitter"
             xmlns:viewmodel="clr-namespace:PloggingApp.MVVM.ViewModels"
             x:DataType="viewmodel:AddLitterViewModel">

    <Grid WidthRequest="150" HeightRequest="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Command="{Binding AddPlasticCommand}" Grid.Row="0" WidthRequest="80" HeightRequest="80" HorizontalOptions="End" Text="Plastics"></Button>
        <Button Command="{Binding AddCanCommand}" Grid.Row="1" WidthRequest="80" HeightRequest="80" HorizontalOptions="End" Text="Cans"></Button>
        <Button Command="{Binding AddCigaretteCommand}" Grid.Row="2" WidthRequest="80" HeightRequest="80" HorizontalOptions="End" Text="Cigarette"></Button>
    </Grid>
</ContentView>
