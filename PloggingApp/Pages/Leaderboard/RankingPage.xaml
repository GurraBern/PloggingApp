<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.Pages.RankingPage"
             xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
             xmlns:viewmodel="clr-namespace:PloggingApp.Pages"
             x:DataType="viewmodel:RankingViewmodel"
             Title="LeaderboardPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="user.svg" Order="Primary" Command="{Binding MyProfileViewModel.GoToMyProfilePageCommand}" Priority="0"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <views:LeaderboardView BindingContext="{Binding LeaderboardViewModel}"></views:LeaderboardView>
    </VerticalStackLayout>
</ContentPage>