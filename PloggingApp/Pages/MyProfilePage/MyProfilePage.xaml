<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
             xmlns:viewmodel="clr-namespace:PloggingApp.MVVM.ViewModels"
             x:DataType="viewmodel:MyProfileViewModel"
             x:Class="PloggingApp.Pages.MyProfilePage"
             Title="My Profile">

    <!-- TODO: Fix mysterious title indentation? -->


    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="logout.svg" Command="{Binding LogoutCommand}"  Order="Primary" Priority="0"/>
    </ContentPage.ToolbarItems>


    <StackLayout>

        <RefreshView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RefreshColor="Red" 
            IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshMyProfileCommand}">

            <views:MyProfileView></views:MyProfileView>

        </RefreshView>

    </StackLayout>

</ContentPage>


