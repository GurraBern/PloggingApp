<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
             xmlns:viewmodel="clr-namespace:PloggingApp.MVVM.ViewModels"
             x:DataType="viewmodel:MyProfileViewModel"
             x:Class="PloggingApp.Pages.MyProfilePage"
             Title="My Profile">

    <StackLayout>

        <RefreshView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
            IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshMyProfileCommand}">

            <views:MyProfileView></views:MyProfileView>


        </RefreshView>

    </StackLayout>

</ContentPage>



