<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PloggingApp.Pages.CheckoutImagePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PloggingApp.Pages"
    x:DataType="viewmodels:CheckoutImageViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="{Binding ImagePath}"/>

        <VerticalStackLayout Grid.Row="1" Spacing="5">
            <Label Text="Disclaimer: This photo will be proof of your hard work, other people will be able to see it on your profile."/>

            <Button
                Command="{Binding UsePhotoCommand}"
                HeightRequest="40"
                Style="{StaticResource RoundButton}"
                Text="Use Photo"
                WidthRequest="250"/>
            <Button
                BackgroundColor="{StaticResource Red}"
                Command="{Binding RetakePhotoCommand}"
                HeightRequest="40"
                Style="{StaticResource RoundButton}"
                Text="Retake Photo"
                WidthRequest="250"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>