<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.Pages.PlogTogetherPage"
             xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
             xmlns:viewmodel="clr-namespace:PloggingApp.MVVM.ViewModels"
             x:DataType="viewmodel:PlogTogetherViewModel"
             xmlns:model="clr-namespace:PloggingApp.MVVM.ViewModels"
             Title="PlogTogetherPage"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <Grid ColumnDefinitions="*,*"
          ColumnSpacing="10"
          Padding="20"
          RowDefinitions="Auto,Auto,Auto,*,Auto,Auto"
          RowSpacing="10">

        <Label Text="Plog together with friends! Scan a QR code to add to your group, or generate a QR code for your friend to scan!"
               Grid.Column="0"
               Grid.Row="0"
               Grid.RowSpan="2"
               FontSize="Small"/>

        <Label Text="Your group:"
               Grid.Row="2"
               FontSize="Title"/>
        <views:GenerateQRcodeButtonView
            Grid.Column="1"
            Grid.Row="0"/>   
        <views:ScanQRButtonView
            Grid.Column="1"
            Grid.Row="1"
            />  
        <views:PlogTogetherView
            Grid.Row="3"
            Grid.ColumnSpan="2"
            />

        <Button Text="Leave Group"
                Command="{Binding LeaveGroupCommand}"
                IsVisible="{Binding InGroup}"
                WidthRequest="170"
                HeightRequest="60"
                Grid.Column="1"
                Grid.Row="4"
                />

        <Button Text="Delete Group"
                Command="{Binding DeleteGroupCommand}"
                IsVisible="{Binding InGroup}"
                WidthRequest="170"
                HeightRequest="60"
                Grid.Column="1"
                Grid.Row="5"/>
        

        <Button Text="Go Back"
                Grid.Row="5"
                Grid.Column="0"
                WidthRequest="100"
                HeightRequest="40"
                Clicked="OnNavigateClicked"/>
    </Grid>
</ContentPage>
 