<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.Pages.SessionStatisticsPage"
             xmlns:models="clr-namespace:PloggingApp.MVVM.Models"
             xmlns:viewmodel="clr-namespace:PloggingApp.Pages"
             x:DataType="viewmodel:SessionStatisticsViewModel"
             >
    <VerticalStackLayout>
        <Label Style="{StaticResource Headline}" Text="{Binding PloggingSession.StartDate, StringFormat='{0:D}'}"/>
        <Label Style="{StaticResource SubHeadline}" Text="{Binding PloggingSession.DisplayName}"/>
        <Label Text="{Binding PloggingSession.Id}" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>