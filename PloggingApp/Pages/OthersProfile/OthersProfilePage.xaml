<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.Pages.OthersProfilePage"
             xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
             Title="Others Profile">

    <VerticalStackLayout>
        <VerticalStackLayout>
            <views:BadgesView BindingContext="{Binding BadgesViewModel}"></views:BadgesView>
                <Button Text="Go back" Command="{Binding GoBackCommand}"></Button>
            <views:OthersSessionsView BindingContext="{Binding OthersSessionsViewModel}"></views:OthersSessionsView>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>