<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PloggingApp.Pages.OthersProfilePage"
             xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
             Title="Others Profile">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="user.svg" Order="Primary" Command="{Binding MyProfileViewModel.GoToMyProfilePageCommand}" Priority="0"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <Image Source="leftarrow.png" HeightRequest="40" WidthRequest="40" Margin="5" VerticalOptions="Start" HorizontalOptions="Start" >
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
            </Image.GestureRecognizers>
        </Image>
        <views:OthersSessionsView BindingContext="{Binding OthersSessionsViewModel}" />
    </Grid>


</ContentPage>