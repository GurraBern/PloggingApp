<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlogPal.Maui.Features.PloggingSession.CheckoutImagePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ploggingSessionFeature="clr-namespace:PloggingApp.Features.PloggingSession">

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="{Binding ImagePath}"/>

        <VerticalStackLayout Grid.Row="1" Spacing="5">
            <Label Margin="0,0,0,20" Text="Disclaimer: This photo will be proof of your hard work, other people will be able to see it on your profile."/>

            <Button
                Command="{Binding UsePhotoCommand}"
                HeightRequest="40"
                Style="{StaticResource RoundButton}"
                Text="Use Photo"
                WidthRequest="250"/>
            <Button
                BackgroundColor="{StaticResource Red}"
                Command="{Binding RetakePhotoCommand}"
                HeightRequest="40"
                Style="{StaticResource RoundButton}"
                Text="Retake Photo"
                WidthRequest="250"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>