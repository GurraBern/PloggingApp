            <ScrollView Grid.Row="0" VerticalOptions="FillAndExpand">

                <VerticalStackLayout Padding="20,0" Spacing="10">
                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>

                    <Label
                        HorizontalOptions="Start"
                        Style="{StaticResource SubHeadline}"
                        Text="Recent Sessions"/>
                    <!--<CollectionView ItemsSource="{Binding PloggingSessions}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="modelsCore:PlogSession">

                                <Border
                                    Margin="0,0,0,10"
                                    BackgroundColor="White"
                                    HeightRequest="80"
                                    StrokeThickness="1"
                                    Style="{StaticResource StatsBorder}">
                                    <Border.Shadow>
                                        <Shadow
                                            Brush="Black"
                                            Opacity="0.2"
                                            Radius="8"
                                            Offset="2,2"/>
                                    </Border.Shadow>


                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Grid.Column="0"
                                            Aspect="AspectFill"
                                            Source="{Binding Image}"
                                            VerticalOptions="Center">
                                            <Image.Clip>
                                                <EllipseGeometry
                                                    Center="50,40"
                                                    RadiusX="35"
                                                    RadiusY="35"/>
                                            </Image.Clip>
                                        </Image>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>


                                            <Label FontSize="Medium" Text="{Binding StartDate, StringFormat='{0:dd MMM yyyy HH:mm}'}"/>

                                            <HorizontalStackLayout Grid.Row="1">
                                                <Grid ColumnSpacing="20">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label
                                                        x:Name="Weight"
                                                        Grid.Column="1"
                                                        FontSize="Medium"
                                                        Text="{Binding PloggingData.Weight, StringFormat='{0:F1}g'}"/>

                                                    <Image
                                                        Grid.Column="0"
                                                        HeightRequest="20"
                                                        HorizontalOptions="End"
