                                                    <Label
                                                        x:Name="Distance"
                                                        Grid.Column="2"
                                                        FontSize="Medium"
                                                        Text="{Binding PloggingData.Distance, StringFormat='{0}m'}"/>


                                                </Grid>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>

                                    <Border.GestureRecognizers>
                                        --><!--<TapGestureRecognizer Command="{Binding GoToSessionStatsCommand, Source={RelativeSource AncestorType={x:Type userProfiles:HistoryViewModel}}}" CommandParameter="{Binding .}"/>--><!--
