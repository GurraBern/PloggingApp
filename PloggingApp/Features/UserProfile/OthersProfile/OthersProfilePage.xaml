<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PloggingApp.Pages.OthersProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:PloggingApp.Pages"
    xmlns:views="clr-namespace:PloggingApp.MVVM.Views"
    Title="Others Profile"
    x:DataType="viewmodel:OthersProfilePageViewModel"
    Shell.TabBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image
            Grid.Row="0"
            HorizontalOptions="Start"
            Source="leftarrow.png">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoBackCommand}" Tapped="BackTap"/>
            </Image.GestureRecognizers>
        </Image>

        <views:OthersSessionsView Grid.Row="1" BindingContext="{Binding OthersSessionsViewModel}"/>
    </Grid>
</ContentPage>